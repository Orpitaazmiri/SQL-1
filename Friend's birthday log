INSERT INTO friends (id, name, birthday)
VALUES (3, 'Paxton Munroe', '24.02.1990');

UPDATE friends
SET name = 'Storm'
WHERE id = 1;



ALTER TABLE friends
ADD column email;

UPDATE friends
SET email = 'storm@codeacademy.com'
WHERE id = 1;

